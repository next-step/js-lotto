{
  "ignorePatterns": ["./__tests__/Car.test.js"],
  "rules": {
    "no-implicit-globals": "error",
    "max-depth": ["error", 2],
    "eqeqeq": ["error", "always"],
    "no-var": "error",
    "no-else-return":"error"
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ]
}
