{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "typeRoots": ["./node_modules/@types"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "dom"],
    "useDefineForClassFields": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": ["src/ts/**/*"]
}
